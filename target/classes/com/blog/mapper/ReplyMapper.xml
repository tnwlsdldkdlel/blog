<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.mapper.ReplyMapper">
	<insert id="insert">
		INSERT INTO tbl_Blog_reply(rno,bno,id,content) values(seq_Blog_reply.nextval, #{bno},#{id},#{content})
	</insert>
	
	<delete id="delete">
		DELETE FROM tbl_Blog_reply WHERE RNO = #{rno}
	</delete>
	
	<update id="update">
		UPDATE tbl_Blog_reply SET content = #{content} WHERE rno = #{rno}
	</update>
	
	<select id="replyCount" resultType="int">
		SELECT COUNT(rno) FROM tbl_Blog_reply WHERE RNO > 0 AND bno= #{bno}
	</select>
	
	<select id="read" resultType="com.blog.domain.ReplyVO">
		SELECT * FROM tbl_Blog_reply WHERE bno = #{bno}
	</select>
</mapper>